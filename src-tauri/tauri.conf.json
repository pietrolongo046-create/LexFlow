{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LexFlow",
  "version": "1.10.0",
  "identifier": "com.pietrolongo.lexflow",
  "build": {
    "frontendDist": "../client/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd client && npm run dev",
    "beforeBuildCommand": "cd client && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "LexFlow",
        "width": 1400,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 700,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "visible": false,
        "backgroundColor": "#08090f"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business"
  },
  "plugins": {}
}
